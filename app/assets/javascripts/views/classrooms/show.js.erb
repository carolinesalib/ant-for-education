$(function() {
  <% self.class.include Rails.application.routes.url_helpers %>

  $('.form-credits').on( "change", function() {
    $.post(
      "<%= edit_disciplines_classrooms_path %>",
      {
        id: this.id,
        credits: this.value
      },
      function() {
        console.log('Alterado com sucesso');
      }
    ).fail(function() {
        console.error('Algo deu errado');
    });
  });
});