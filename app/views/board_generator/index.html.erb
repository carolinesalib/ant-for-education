<% content_for :js do %>
  <%= javascript_include_tag 'views/board_generator/index' %>
<% end %>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Gerador quadro de horários</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <% if flash[:info].present? %>
          <p class="alert alert-warning alert-dismissible fade in"><%= flash[:info] %></p>
        <% end %>
        <%= form_tag(board_generator_build_path, method: 'get', class: 'form-horizontal form-label-left') do %>
          <div class="form-group">
            <div class="col-md-9 col-sm-9 col-xs-12">
              <%= select_tag(:school_id,
                             options_from_collection_for_select(@schools, :id, :name),
                             include_blank: 'Selecione uma escola',
                             class: 'form-control') %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-9 col-sm-9 col-xs-12">
              <%= select_tag(:course_id,
                             options_from_collection_for_select(@courses, :id, :name),
                             include_blank: 'Selecione um curso',
                             class: 'form-control') %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-9 col-sm-9 col-xs-12">
              <%= select_tag(:serie_id,
                             options_from_collection_for_select(@series, :id, :name),
                             include_blank: 'Selecione uma série',
                             class: 'form-control') %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-9 col-sm-9 col-xs-12">
              <%= select_tag(:classrooms,
                             nil,
                             multiple: true,
                             class: 'select2_multiple form-control') %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-9 col-sm-9 col-xs-12">
              <select class="form-control">
                <option>Horário de aula - Período matutino</option>
              </select>
            </div>
          </div>

          <div class="ln_solid"></div>
          <div class="form-group">
            <%= submit_tag 'Gerar quadro de horários', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
