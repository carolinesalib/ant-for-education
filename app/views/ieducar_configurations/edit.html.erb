<div class="page-title">
    <div class="title_left">
        <h3>Configurações do i-Educar</h3>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
        <h2>Editar configurações</h2>

        <div class="clearfix"></div>
        </div>
        <div class="x_content">
        <br>
        <%= form_for(@configuration, url: edit_ieducar_configuration_path, class:"form-horizontal form-label-left" ) do |f| %>
            <div>
                <%= f.text_field :url, class: "form-control", placeholder: "http://comunidade.ieducar.com.br", autofocus: true %>
            </div>
            <button type="submit" class="btn btn-success">Salvar</button>
        <% end %>
        </div>
    </div>
    </div>
</div>