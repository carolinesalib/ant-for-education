<div class="login_wrapper">
  <div class="animate form login_form">
    <section class="login_content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h1>Login in</h1>

        <div>
          <%= f.email_field :email, class: "form-control", placeholder: "E-mail", autofocus: true %>
        </div>
        <div>
          <%= f.password_field :password, class: "form-control", placeholder: "Senha", autocomplete: "off" %>
        </div>

        <div>
          <%= f.submit "Log in", class: "btn btn-default submit" %>
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "reset_pass" %>
        </div>

        <div class="clearfix"></div>

        <div class="separator">
          <p class="change_link">Novo aqui?
              <%= link_to "FaÃ§a seu cadastro.", new_registration_path(resource_name), class:"to_register" %>
          </p>
          <div class="clearfix"></div>
          <br />
        </div>
      <% end %>
    </section>
  </div>
</div>
