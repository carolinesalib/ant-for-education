<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Editar horários de aulas</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br>
        <%= form_for @class_schedule, url: class_schedule_path, method: :patch, html: { class:"form-horizontal form-label-left" }  do |f| %>
          <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">Horário:</label>
            <div class="col-md-2 col-sm-2 col-xs-12">
              <input type="text" class="form-control" placeholder="Etapa">
            </div>
            <div class="col-md-2 col-sm-2 col-xs-12">
              <input type="text" class="form-control" placeholder="Horário início">
            </div>
            <div class="col-md-2 col-sm-2 col-xs-12">
              <input type="text" class="form-control" placeholder="Horário fim">
            </div>

            <div class="col-md-2 col-sm-2 col-xs-12">
              <button type="button" class="btn btn-success"><i class="fa fa-plus"></i></button>
              <button type="button" class="btn btn-danger"><i class="fa fa-trash"></i></button>
            </div>
          </div>
          <div class="ln_solid"></div>
          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <button type="submit" class="btn btn-success">Salvar</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>