<% content_for :js do %>
<%= javascript_include_tag 'views/class_schedule/edit' %>
<% end %>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Editar horários de aulas</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br>
        <%= form_for @class_schedule, url: class_schedule_path, method: :patch, html: { class:"form-horizontal form-label-left" }  do |f| %>
          <%= f.fields_for :class_schedule_steps, f.object.class_schedule_steps.order(:step) do |steps_fields| %>
            <%= render partial: "class_schedule_step_fields", locals: { f: steps_fields } %>
          <% end %>
          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <%= link_to_add_association('<i class="fa fa-plus"></i> Adicionar novo horário'.html_safe, f, :class_schedule_steps, class: "btn btn-success") %>
            </div>
          </div>
          <div class="ln_solid"></div>
          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <button type="submit" class="btn btn-success">Salvar</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>