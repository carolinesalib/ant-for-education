<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Turmas</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">

        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th>Código i-Educar</th>
              <th>Nome</th>
              <th>Hora inicial</th>
              <th>Hora final</th>
              <th>Início intervalo</th>
              <th>Fim intervalo</th>
            </tr>
          </thead>
          <tbody>
            <% @classes.each do |classroom| %>
            <tr>
              <th scope="row"><%= classroom.id %></th>
              <td><%= classroom.ieducar_code %></td>
              <td><%= classroom.name %></td>
              <td><%= classroom.start_at.strftime("%I:%M") %></td>
              <td><%= classroom.stop_at.strftime("%I:%M") %></td>
              <td><%= classroom.interval_start.strftime("%I:%M") %></td>
              <td><%= classroom.interval_stop.strftime("%I:%M") %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>